package automation.PestRoutes.Utilities;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.ExtentTest;
import com.aventstack.extentreports.reporter.ExtentAventReporter;

public class Reporter {
	static ExtentAventReporter htmlReport;
	static ExtentReports extent;
	
	public static void status(String expectedResult, String actualResult, String testName) {
		htmlReport = new ExtentAventReporter("../automation/src/test/resources/Results.html");
		extent = new ExtentReports();
		extent.attachReporter(htmlReport);
		ExtentTest test = extent.createTest(testName);
		if(expectedResult==actualResult) {
			test.pass("Actual result=> "+ actualResult+ " matched with => " +expectedResult);
		} else {
			test.fail("Actual result=> "+ actualResult+ " did not matched with => " +expectedResult);
		}
		
	}
	
	public static void flushReport() {
		extent.flush();
	}

}
